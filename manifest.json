{
  "manifest_version": 3,
  "name": "Great Filter",
  "version": "1.0",
  "description": "AI-powered content filtering extension",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Great Filter"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["https://openrouter.ai/*", "https://www.youtube.com/*","https://news.ycombinator.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["shared/content-base.js", "shared/prompts.js", "content-scripts/youtube.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://news.ycombinator.com/*"],
      "exclude_matches": ["https://news.ycombinator.com/item*"],
      "js": ["shared/content-base.js", "shared/prompts.js", "content-scripts/hackernews.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}