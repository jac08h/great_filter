{
  "manifest_version": 3,
  "name": "Smart Content Filter",
  "version": "1.0",
  "description": "A basic Chrome extension with popup",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Content Filter"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://openrouter.ai/*", "https://www.youtube.com/*", "https://www.reddit.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["reddit-content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}