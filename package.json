{
  "name": "great-filter-extension",
  "version": "2.1.0",
  "description": "Browser extension for AI-powered content filtering",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "syntax-check": "node --check *.js && node --check shared/*.js && node --check content-scripts/*.js",
    "lint": "eslint *.js shared/*.js content-scripts/*.js",
    "lint:fix": "eslint *.js shared/*.js content-scripts/*.js --fix",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:smoke": "cross-env GF_USE_LIVE=1 playwright test",
    "test:smoke:trace": "cross-env GF_USE_LIVE=1 playwright test --trace on"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright-webextext": "^0.0.4",
    "tslib": "^2.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "content-scripts/*.js",
      "shared/*.js",
      "!**/node_modules/**"
    ]
  }
}
